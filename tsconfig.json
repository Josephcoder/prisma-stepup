{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./build",
        "module": "commonjs",
        "types": ["node"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "baseUrl": "src",
        "paths": {
            "@/config/*": ["config/*"],
            "@/controllers/*": ["controllers/*"],
            "@/middlewares/*": ["middlewares/*"],
            "@/routes/*": ["routes/*"],
            "@/services/*": ["services/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"],
            "@/validations/*": ["validations/*"]
        }
    },
    "include": ["src"],
    "exclude": ["dist", "prisma", "tests", "node_modules"]
}
